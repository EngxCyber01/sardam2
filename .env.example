# Environment Variables for SARDAM School Website
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3000

# School Information
SCHOOL_NAME=SARDAM Non-Governmental Scientific High School
ESTABLISHED_YEAR=2015
SCHOOL_EMAIL=info@sardam.edu

# WhatsApp Configuration
WHATSAPP_NUMBER=9647501234567
ENABLE_WHATSAPP=true

# Social Media Links
FACEBOOK_URL=https://facebook.com/sardam.school
INSTAGRAM_URL=https://instagram.com/sardam.school
TIKTOK_URL=https://tiktok.com/@sardam.school

# Security Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
MAX_LOGO_SIZE_MB=2

# Feature Toggles
ENABLE_CONTACT_FORM=true
ENABLE_LOGO_UPLOAD=true

